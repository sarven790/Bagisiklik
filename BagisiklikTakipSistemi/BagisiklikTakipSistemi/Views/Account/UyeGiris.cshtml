@model BagisiklikTakipSistemi.Models.UyelerTablosu
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Bağışıklık Takip</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/login-form-11/css/style.css" rel="stylesheet" />

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">Üye Olma</h3>
                        @using (Html.BeginForm("UyeGiris", "Account", FormMethod.Post, new { @class = "login-form" }))
                        {
                            <div class="form-group">
                                <input type="text" name="KulAdi" class="form-control rounded-left" placeholder="Adınız" required>
                            </div>                          
                            <div class="form-group d-flex">
                                <input type="password" name="Sifre" class="form-control rounded-left" placeholder="Şifreniz" required>
                            </div>                           
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giris Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    Üye degilsen! <a href="/Account/UyeOl">Uye ol</a>
                                </div>

                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="~/login-form-11/js/bootstrap.min.js"></script>
    <script src="~/login-form-11/js/jquery.min.js"></script>
    <script src="~/login-form-11/js/main.js"></script>
    <script src="~/login-form-11/js/popper.js"></script>

</body>
</html>

